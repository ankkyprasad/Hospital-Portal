<div class="h-full flex bg-gray-50 py-12 px-4 sm:px-6 lg:px-8 flex-col">
  <div class="flex w-full justify-center">
    <div class="p-6 bg-white border border-gray-200 rounded-lg mx-4 h-20">
      <h3 class="mb-2 text-2xl font-bold tracking-tight text-gray-700">Personal Details</h3>
    </div>
    <div class="max-w-md w-full space-y-8">
      <div class="bg-white max-w-md rounded overflow-hidden shadow-xl p-5">
        <%= form_with(model: doctor) do |form| %>
          <div class="rounded-md shadow-sm -space-y-px">
            <div class="grid gap-6">
              <div class="col-span-12">
                <%= form.label :description, class:"block text-sm font-medium text-gray-700" %>
                <%= form.text_field :description, class:"mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
              </div>
              <div class="col-span-12">
                <%= form.label :speciality, class:"block text-sm font-medium text-gray-700" %>
                <%= form.text_field :speciality, class:"mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
              </div>
              <div class="col-span-12">
                <%= form.label :experience, class:"block text-sm font-medium text-gray-700" %>
                <%= form.number_field :experience, class:"mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
              </div>
              <div class="col-span-12">
                <%= form.label :phone_no, class:"block text-sm font-medium text-gray-700" %>
                <%= form.text_field :phone_no, class:"mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
              </div>
            </div>
          </div>
          <div class="mt-6">
            <%= form.submit "Save", class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
