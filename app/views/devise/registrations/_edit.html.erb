<div class="h-full flex bg-gray-50 py-8 px-4 sm:px-6 lg:px-8 flex-col">
  <div class="flex w-full justify-center">
    <div class="p-6 bg-white border border-gray-200 rounded-lg mx-4 h-20">
      <h3 class="mb-2 text-2xl font-bold tracking-tight text-gray-700">Account Details</h3>
    </div>
    <div class="max-w-md w-full space-y-8">
      <div class="bg-white max-w-md rounded overflow-hidden shadow-xl p-5">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="rounded-md shadow-sm -space-y-px">
            <div class="grid gap-6">
              <div class="col-span-12">
                <%= f.label :name, class:"block text-sm font-medium text-gray-700" %>
                <%= f.text_field :name, autofocus: true, autocomplete: "email", class:"mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
              </div>

              <div class="col-span-12">
                <%= f.label :password, class:"block text-sm font-medium text-gray-700" %>
                <%= f.password_field :password, autocomplete: "new-password", class:"mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
              </div>
              <div class="col-span-12">
                <%= f.label :password_confirmation, class:"block text-sm font-medium text-gray-700" %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
              </div>
              <div class="col-span-12">
                <%= f.label :current_password, class:"block text-sm font-medium text-gray-700" %>
                <%= f.password_field :current_password, autocomplete: "current-password", class:"mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
              </div>
            </div>
          </div>
          <div class="mt-6">
            <%= f.submit "Save", class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
