<% appointments.each do |appointment| %>
  <%= link_to appointment_path(appointment), class: "relative flex items-start justify-between rounded-xl borderp-4 shadow-md sm:p-6 lg:p-8 bg-gray-50" do %>
    <div class="pt-4 text-gray-500">
      <h3 class="mt-4 text-lg font-bold text-gray-900 sm:text-xl">
        <%= appointment.first_name %> <%= appointment.last_name %>
      </h3>
      <p class="mt-2 text-sm sm:block">
        Starts at: <%= appointment.appointment_date %>
      </p>
    </div>
  <% end %>
<% end %>
